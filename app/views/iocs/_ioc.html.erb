<div id="<%= dom_id ioc %>">

<div class="card my-3">
  <div class="card-body">
    <div class="text-center mb-3">
      <h5 class="card-title"><%= ioc.url %></h5>
      <hr>
      <h6 class="card-subtitle mb-2 text-muted">Comments:</h6>
      <p class="card-text"><%= ioc.comments %></p>
    </div>
    <hr>
  <% unless ioc.status == "official_url" %>
    <p class="card-text">
      <strong>Removed date:</strong>
      <%= ioc.removed_date %>
    </p>
    <p class="card-text">
      <strong>Report method one:</strong>
      <%= ioc.report_method_one %>
    </p>
    <p class="card-text">
      <strong>Other Report Method:</strong>
      <%= ioc.report_method_two %>
    </p>
    <p class="card-text">
      <strong>Form used:</strong>
      <%= @form[:name] %>
    </p>
    <p class="card-text">
      <strong>Domain Host:</strong>
      <%= @host[:name] %>
    </p>
    <p class="card-text">
      <strong>Follow-up Date:</strong>
      <%= ioc.follow_up_date %>
    </p>
    <p class="card-text">
      <strong>Follow-up count:</strong>
      <%= ioc.follow_up_count %>
    </p>
    <% if policy(Ioc).presigned? %>
      <% unless !ioc.file_url %>
        <p class="mb-3" data-controller="presigned" data-presigned-bucket-value="<%= ENV['BUCKET']%>" data-presigned-access-value="<%= ENV['ACCESS_KEY']%>" data-presigned-secret-value="<%= ENV['SECRET_ACCESS_KEY']%>" data-presigned-region-value="<%= ENV['REGION']%>">
          <strong data-presigned-target="evidence" data-url="<%= ioc.file_url %>">Evidence:</strong>
            <button data-action="click->presigned#downloadEvidence" class="btn btn-primary">Download Evidence</button>
        </p>
      <% end %>
    <% end %>
    <% if ioc.url.include?("http") %>
      <a href='<%= ioc.url.strip %>' target="_blank" class='card-link' > Go to: <%= ioc.url.strip %></a>
    <% else %>
      <a href='http://<%= ioc.url.strip %>' target="_blank" class='card-link' > Go to: <%= ioc.url.strip %></a>
    <% end %>
  <% end %>
  </div>
</div>

</div>
