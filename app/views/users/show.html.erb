<div class="container-fluid mt-3">

  <%= render @user %>
  <div class="text-center">
     <p>
      Created: <%= @user.created_at %>
    </p>
  </div>



  <div class="d-flex flex-column">

    <% if @current_user == @user %>
      <%= link_to "Edit my email or password", edit_user_registration_path, class: "btn btn-info mt-3" %>
    <% end %>

   <%= link_to "Back to all Users", users_path, class: "btn btn-info mt-3" %>

   <%= button_to "Delete account", user_path(@user), class: "btn btn-danger mt-3 text-white", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
  </div>

</div>