<%= simple_form_for(@ioc, url: simple_create_iocs_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :url, label: "Crypto Address | URL | Email | IP Address:" %>
    <%= f.input :comments, label: "Scam details or comments:", :input_html => {:rows => 5} %>
    <%= f.hidden_field :file_url, id: 'file-url', data: { presigned_target: "fileUrl" } %>
  </div>
  <label for="file-input"> Attach an image, email, text or other evidence files.</label>
  <input type="file" id="file-input" data-presigned-target="fileInput" data-action="change->presigned#fetchPresigned" class="mb-3">
  <div class="d-flex justify-content-center my-3">
   <%= recaptcha_tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Report a Scam", class: "btn btn-primary" %>
  </div>
<% end %>
