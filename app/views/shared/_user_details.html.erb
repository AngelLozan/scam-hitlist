 <div class='container-fluid my-5'>
  <% if user_signed_in? %>
    <div class="d-flex justify-content-center">
      <div class="row col-12 text-center col-lg-12 mt-2 mb-3">
        <h1>Welcome back <strong> <%= @current_user.email %></strong> !</h1>
      </div>
    </div>

  <% else %>
    <div class="d-flex flex-column justify-content-center">
      <h1>Make Web3 safer. Report a Scam</h1>
      <p>Report scam addresses, emails and sites and bring down malicious actors.</p>
    </div>
  <% end %>
 </div>
