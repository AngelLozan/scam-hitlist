<div class="container-fluid my-3">


  <div class="mt-3">
    <h1 class='text-center'>All Users</h1>
  </div>
  <div class="d-flex justify-content-center my-3">
    <%= link_to new_user_path, class: 'btn btn-primary' do %>
      <i class="fa-solid fa-user-plus fa-lg"></i>
     <% end %>
  </div>


  <div id="users" class="d-flex flex-column align-items-center justify-content-center">
    <% @users.each do |user| %>
      <%= render user %>
      <p>
        <%= link_to "Show this user", user, class:'btn btn-primary' %>
      </p>
    <% end %>
  </div>



</div>
